@model AdventurePark.Models.Rides

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Rides</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RideID)

        <div class="form-group">
            <h5>Ride name</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.RideName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RideName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Difficulty level</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.RideDifficultyLevel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RideDifficultyLevel, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "IndexAdmin")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
