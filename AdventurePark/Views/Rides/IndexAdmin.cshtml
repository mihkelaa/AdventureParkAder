@model IEnumerable<AdventurePark.Models.Rides>

@{
    ViewBag.Title = "Rides";
}

<h2>Rides list</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Ride name
        </th>
        <th>
            Difficulty level
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RideName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RideDifficultyLevel)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RideID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RideID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RideID })
        </td>
    </tr>
}

</table>
