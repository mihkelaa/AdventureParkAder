@model IEnumerable<AdventurePark.Models.Visitors>

@{
    ViewBag.Title = "Visitor list";
}

<h2>Visitor list</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            First name
        </th>
        <th>
            Last name
        </th>
        <th>
            Age
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VisitorFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VisitorLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VisitorAge)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VisitorID }) |
            @Html.ActionLink("Details", "Details", new { id=item.VisitorID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.VisitorID })
        </td>
    </tr>
}

</table>
